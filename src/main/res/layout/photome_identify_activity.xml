<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@mipmap/title_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photome_identify_return"
            android:layout_gravity="left"
            android:src="@mipmap/return_back"/>
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22.7sp"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="18dp"
        android:text="请您按照拍照教程上传照片，否则将会影响借款申请"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="244.7dp"
        android:layout_height="234dp"
        android:layout_marginTop="38.3dp"
        android:layout_gravity="center"
        android:background="@drawable/dotted_line"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"
            android:src="@mipmap/human"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:text="上传持证半身照"
            android:textSize="12sp"/>
    </LinearLayout>

    <Button
        android:layout_width="186.7dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.7dp"
        android:id="@+id/finish"
        android:layout_gravity="center"
        android:background="@color/red_nomal"
        android:text="完成"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
