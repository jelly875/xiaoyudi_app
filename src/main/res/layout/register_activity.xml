<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@mipmap/title_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_return"
            android:layout_gravity="left"
            android:src="@mipmap/return_back"/>
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22.7sp"/>
    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="28.7dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="78dp"
        android:paddingLeft="18dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/phone"/>
        <EditText
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:text="请输入手机号码"
            android:textSize="16.7sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingTop="26dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/verify"/>
        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:text="请输入验证码"
            android:textSize="16.7sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/invite_code"
        android:paddingLeft="18dp"
        android:paddingTop="26dp"
        android:visibility="invisible"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/invite_code"/>
        <EditText
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.3dp"
            android:text="请输入邀请码"
            android:textSize="16.7sp"/>
    </LinearLayout>
    <Button
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:layout_marginTop="41.3dp"
        android:layout_marginLeft="18.7dp"
        android:background="@color/green"
        android:text="下一步"
        android:textSize="18.7sp"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingTop="13.3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老用户登录"
            android:textSize="12sp"
            android:textColor="@color/green"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/have_invite_code"
            android:paddingLeft="215dp"
            android:text="有邀请码"
            android:textSize="12sp"
            android:textColor="@color/green"/>
    </LinearLayout>

</LinearLayout>
