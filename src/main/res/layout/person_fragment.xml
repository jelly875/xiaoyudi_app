<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingLeft="18dp"
        android:text="请你认真填写，乱填或误填都将会影响借款申请！"/>

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="13.3dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.7dp"
            android:layout_gravity="center"
            android:text="姓名"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="75dp"
            android:text="周静"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="性别"
            android:textSize="16sp"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="218dp"
            android:background="@mipmap/oval_normal"
            android:text="男"
            android:textSize="16sp"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:text="女"
            android:textColor="@color/white"
            android:background="@mipmap/oval_selected"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="身份证号"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="43dp"
            android:text="420**********6845"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="电子邮箱"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="学历"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="婚否"
            android:textSize="16sp"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="218dp"
            android:text="是"
            android:background="@mipmap/oval_normal"
            android:textSize="16sp"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:text="否"
            android:textColor="@color/white"
            android:background="@mipmap/oval_selected"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="17.7dp"
            android:text="家庭住址"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:layout_width="186.7dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/next"
        android:layout_marginTop="26.3dp"
        android:background="@color/green"
        android:text="下一步"
        android:textSize="18.7sp"
        android:textColor="@color/white"/>
</LinearLayout>
