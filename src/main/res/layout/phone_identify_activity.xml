<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@mipmap/title_bg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone_identify_return"
            android:layout_gravity="left"
            android:src="@mipmap/return_back"/>
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="22.7sp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32.7dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46.3dp"
            android:text="手机号码"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="61.7dp"
            android:text="15527931593"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46.3dp"
            android:text="运营商"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="79.7dp"
            android:text="湖北移动"
            android:textSize="18sp"/>
    </LinearLayout>
    <EditText
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50.3dp"
        android:layout_marginTop="19.6dp"
        android:text="请输入运营商服务密码"
        android:textSize="12sp"/>
    <Button
        android:layout_width="186.7dp"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_submit"
        android:layout_marginTop="65.3dp"
        android:layout_marginLeft="86.7dp"
        android:background="@color/red_nomal"
        android:text="确认提交"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>
