<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/xiaoyudi_tab"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/home_radio"
            style="@style/xiaoyudi_tab"
            android:drawableTop="@drawable/home_selector"
            android:text="首页"/>

        <RadioButton
            android:id="@+id/identify_radio"
            style="@style/xiaoyudi_tab"
            android:drawableTop="@drawable/identify_selector"
            android:text="认证"/>

        <RadioButton
            android:id="@+id/aboutme_radio"
            style="@style/xiaoyudi_tab"
            android:drawableTop="@drawable/aboutme_selector"
            android:text="我"/>

    </RadioGroup>
</LinearLayout>
